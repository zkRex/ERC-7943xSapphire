{
  "name": "quickstart",
  "version": "1.0.0",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:localnet": "hardhat test --network sapphire-localnet",
    "test:testnet": "hardhat test --network sapphire-testnet",
    "test:urwa20:localnet": "hardhat test --network sapphire-localnet test/uRWA20.ts > test-results-urwa20-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:urwa20:testnet": "hardhat test --network sapphire-testnet test/uRWA20.ts > test-results-urwa20-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:urwa721:localnet": "hardhat test --network sapphire-localnet test/uRWA721.ts > test-results-urwa721-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:urwa721:testnet": "hardhat test --network sapphire-testnet test/uRWA721.ts > test-results-urwa721-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:urwa1155:localnet": "hardhat test --network sapphire-localnet test/uRWA1155.ts > test-results-urwa1155-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:urwa1155:testnet": "hardhat test --network sapphire-testnet test/uRWA1155.ts > test-results-urwa1155-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:all:localnet": "hardhat test --network sapphire-localnet > test-results-all-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:all:testnet": "hardhat test --network sapphire-testnet > test-results-all-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "deploy:urwa20:localnet": "hardhat ignition deploy ignition/modules/uRWA20.ts --network sapphire-localnet",
    "deploy:urwa20:testnet": "hardhat ignition deploy ignition/modules/uRWA20.ts --network sapphire-testnet",
    "deploy:urwa20:mainnet": "hardhat ignition deploy ignition/modules/uRWA20.ts --network sapphire",
    "check-balance": "ts-node scripts/check-balance.ts",
    "check-balance:testnet": "ts-node scripts/check-balance.ts sapphire-testnet",
    "check-balance:mainnet": "ts-node scripts/check-balance.ts sapphire",
    "send-to-address:testnet": "ts-node scripts/send-to-address.ts",
    "create-key-and-fund:testnet": "ts-node scripts/create-key-and-fund.ts",
    "demo": "tsx demo/demo.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.15",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox-viem": "^4.1.1",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/hardhat-viem": "^2.1.3",
    "@oasisprotocol/sapphire-contracts": "^0.2.15",
    "@oasisprotocol/sapphire-hardhat": "^2.22.2",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.27.0",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4",
    "viem": "^2.39.3"
  },
  "dependencies": {
    "siwe": "^3.0.0",
    "solady": "^0.1.26"
  }
}